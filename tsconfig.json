{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",     
    "module": "ES2022", 
    "moduleResolution": "node", 
    "types": ["bun-types"],       
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true,
    "strict": true,       
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["src/libs/*"],
      "@config": ["src/config"],
      "@plugins": ["src/plugins/index.ts"]
    },
  }
}
